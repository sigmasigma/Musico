<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:layout_gravity="center"
            android:focusableInTouchMode="false"
            android:thumb="@drawable/blue_circle"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:layout_weight="10" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="390">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:id="@+id/textView1"
                    android:layout_weight="46318"
                    android:alpha="80"
                    android:gravity="center" />

                <!--android:text="part1"-->
                <!--android:background="#A0A0A0"-->

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:id="@+id/spinner2"
                    android:layout_weight="28029"
                    android:background="#6AD0E0"
                    android:gravity="center" />

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:id="@+id/spinner3"
                    android:layout_weight="14015"
                    android:background="#E0D020"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:id="@+id/spinner4"
                    android:layout_weight="28029"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:id="@+id/spinner5"
                    android:layout_weight="10511"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:id="@+id/spinner6"
                    android:layout_weight="14015"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:id="@+id/spinner7"
                    android:layout_weight="28029"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:id="@+id/spinner"
                    android:layout_weight="10511"
                    android:gravity="center" />
            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:layout_weight="10" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="START"
            android:id="@+id/bt_start"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RecMode"
            android:id="@+id/recModeBt"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/debug"
            android:layout_gravity="center" />

    </LinearLayout>

</RelativeLayout>
